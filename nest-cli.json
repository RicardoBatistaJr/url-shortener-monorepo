{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "projects": {
    "shortener": {
      "type": "application",
      "root": "apps/shortener",
      "sourceRoot": "src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/shortener/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "sourceRoot": "src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "sourceRoot": "src",
      "entryFile": "index",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}
